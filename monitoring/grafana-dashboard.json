            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 4
            },
            "targets": [
                {
                    "expr": "rate(quantumpulse_transactions_total[1m])*60",
                    "refId": "A",
                    "legendFormat": "TX/min"
                }
            ]
        },
        {
            "id": 7,
            "title": "API Requests",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 12
            },
            "targets": [
                {
                    "expr": "rate(quantumpulse_api_requests_total[5m])*60",
                    "refId": "A",
                    "legendFormat": "Requests/min"
                }
            ]
        },
        {
            "id": 8,
            "title": "WebSocket Connections",
            "type": "gauge",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 12,
                "y": 12
            },
            "targets": [
                {
