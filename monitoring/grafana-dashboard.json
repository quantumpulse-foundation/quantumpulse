{
    "annotations": {
        "list": []
    },
    "title": "QuantumPulse Dashboard",
    "uid": "quantumpulse-main",
    "version": 1,
    "timezone": "browser",
    "refresh": "5s",
    "panels": [
        {
            "id": 1,
            "title": "QP Price (USD)",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 0,
                "y": 0
            },
            "targets": [
                {
                    "expr": "quantumpulse_price_usd",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": 600000
                            }
                        ]
                    },
                    "unit": "currencyUSD"
                }
            }
        },
        {
            "id": 2,
            "title": "Chain Length",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 6,
                "y": 0
            },
            "targets": [
                {
                    "expr": "quantumpulse_chain_length",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "palette-classic"
                    }
                }
            }
        },
        {
            "id": 3,
            "title": "Mined Coins",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 12,
                "y": 0
            },
            "targets": [
                {
                    "expr": "quantumpulse_mined_coins_total",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "max": 3000000
                }
            }
        },
        {
            "id": 4,
            "title": "Active Peers",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 18,
                "y": 0
            },
            "targets": [
                {
                    "expr": "quantumpulse_active_peers",
                    "refId": "A"
                }
            ]
        },
        {
            "id": 5,
            "title": "Network Hashrate",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 4
            },
            "targets": [
                {
                    "expr": "quantumpulse_hashrate_mhs",
                    "refId": "A",
                    "legendFormat": "Hashrate (MH/s)"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "MH/s"
                }
            }
        },
        {
            "id": 6,
