{
    "name": "quantumpulse-wallet",
    "version": "7.0.0",
    "manifest_version": 3,
    "description": "QuantumPulse Wallet Browser Extension",
    "permissions": [
        "storage",
        "notifications",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "https://api.quantumpulse.io/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}